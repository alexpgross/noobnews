<h1 class="authentication">Log In</h1>

<%= form_tag sessions_path do %>
  <h4>Username</h4>
  <div class="form">
    <%= text_field_tag :user_name, params[:user_name], :class => "fields" %>
  </div>
  <h4>Password</h4>
  <div class="form">
    <%= password_field_tag :password, :class => "fields" %>
  </div>
  <div class="form" id="submit"><%= submit_tag "Log In" %></div>
<% end %>
