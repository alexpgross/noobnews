<div id="create_post">
  <% if current_user %>
    <%= form_for @post do |f| %>
      <%= f.label :description %>
      <%= f.text_field :description, :input_html => {:maxlength => 25} %>
      <%= f.label :link %>
      <%= f.text_field :link %>
      <%= f.submit %>
    <% end %>
  <% end %>
</div>
<br>
<br>

<div id="post_information">
  <div class="row">
    <% @sort.each do |post| %>
    <div class="col-md-2"><%= post.comments.count %> comments </div>
    <div class="col-md-6"> <%= link_to post.description, post.link %> </div>
    <div class="col-md-2"> Posted by <%= post.user.user_name %> </div>
    <div class="col-md-1"><%= post.votes.count %> votes </div>    
      <% if current_user %>
        <%= form_for @vote do |f| %>
          <%= f.hidden_field :post_id, :value => post.id %>
          <%= f.submit "Vote" %>
        <% end %>
      <% end %>
  <% end %>
  </div>
</div>